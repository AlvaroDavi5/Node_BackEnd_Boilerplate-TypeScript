{
	"$schema": "https://json.schemastore.org/semantic-release.json",
	"repositoryUrl": "https://github.com/AlvaroDavi5/Node_BackEnd_Boilerplate-TypeScript",
	"tagFormat": "v${version}",
	"ci": true,
	"dryRun": false,
	"branches": [
		"main",
		"release"
	],
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "conventionalcommits",
				"presetConfig": {},
				"parserOpts": {
					"noteKeywords": [
						"BREAKING CHANGE",
						"BREAKING CHANGES"
					]
				},
				"releaseRules": [
					{
						"scope": "no-release",
						"release": false
					},
					{
						"type": "build",
						"scope": "release",
						"release": "minor"
					},
					{
						"type": "refactor",
						"scope": "perf*",
						"release": "minor"
					},
					{
						"type": "chore",
						"scope": "build",
						"release": "minor"
					},
					{
						"type": "chore",
						"scope": "fix",
						"release": "patch"
					},
					{
						"type": "ci",
						"scope": "fix",
						"release": "patch"
					}
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "conventionalcommits",
				"presetConfig": {
					"types": [
						{
							"type": "revert",
							"section": "‚è™ Reverts",
							"hidden": false
						},
						{
							"type": "feat",
							"section": "üöÄ Features",
							"hidden": false
						},
						{
							"type": "fix",
							"section": "üêõ Bug Fixes",
							"hidden": false
						},
						{
							"type": "perf",
							"section": "‚ö°Ô∏è Performance Improvements",
							"hidden": false
						},
						{
							"type": "ci",
							"section": "üîß CI/CD",
							"hidden": false
						},
						{
							"type": "chore",
							"section": "üî® Chore",
							"hidden": false
						},
						{
							"type": "refactor",
							"section": "üßπ Code Refactoring",
							"hidden": false
						},
						{
							"type": "docs",
							"section": "üìö Documentation",
							"hidden": false
						},
						{
							"type": "test",
							"section": "üß™ Tests",
							"hidden": false
						},
						{
							"type": "style",
							"section": "üé® Style Changes",
							"hidden": true
						},
						{
							"type": "build",
							"section": "üì¶ Build",
							"hidden": true
						}
					]
				},
				"parserOpts": {
					"noteKeywords": [
						"BREAKING CHANGE",
						"BREAKING CHANGES"
					]
				},
				"writerOpts": {
					"commitsSort": [
						"subject",
						"scope"
					]
				}
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false,
				"pkgRoot": ".",
				"tarballDir": "./"
			}
		],
		[
			"@semantic-release/github",
			{
				"assets": [
					{
						"path": "build.zip",
						"name": "node_backend_boilerplate-v${nextRelease.version}.zip",
						"label": "Application WebPack - v${nextRelease.version}"
					},
					{
						"path": "node_backend_boilerplate-${nextRelease.version}.tgz",
						"name": "node_backend_boilerplate-v${nextRelease.version}.tgz",
						"label": "Application TarBall - v${nextRelease.version}"
					},
					{
						"path": "CHANGELOG.md",
						"name": "CHANGELOG-node_backend_boilerplate-v${nextRelease.version}.md",
						"label": "Application CHANGELOG - v${nextRelease.version}"
					}
				]
			}
		]
	]
}
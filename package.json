{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "node_backend_boilerplate",
	"description": "Node.js Boilerplate for Back-End using TypeScript",
	"version": "4.13.1",
	"license": "MIT",
	"author": "Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>",
	"contributors": [
		"Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>"
	],
	"main": "./src/main.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlvaroDavi5/Node_BackEnd_Boilerplate-TypeScript.git",
		"ssh": "git@github.com:AlvaroDavi5/Node_BackEnd_Boilerplate-TypeScript.git"
	},
	"private": false,
	"os": [
		"linux",
		"ubuntu",
		"win32"
	],
	"engines": {
		"node": "f>=18.6.x <=20.x.x",
		"yarn": "f>=1.22.x <3.x.x"
	},
	"engineStrict": true,
	"keywords": [
		"boilerplate",
		"node",
		"typescript",
		"javascript",
		"nestjs"
	],
	"scripts": {
		"typecheck": "tsc --project tsconfig.json --noEmit",
		"build": "nest build",
		"build:webpack": "yarn build && webpack --config webpack.config.js",
		"start": "cross-env NODE_PATH=. nest start",
		"start:prod": "node build/main.js",
		"start:webpack": "node build/webpack.js",
		"start:dev": "cross-env NODE_PATH=. NODE_ENV=dev nodemon --config nodemon.json",
		"start:debug": "cross-env NODE_PATH=. NODE_ENV=dev nodemon --config nodemon-debug.json",
		"security-check": "node ./scripts/security-check.js",
		"mock-dependencies": "cross-env NODE_PATH=. ts-node --project tsconfig.json ./scripts/mock-dependencies.ts",
		"receive-messages": "cross-env NODE_PATH=. ts-node --project tsconfig.json scripts/receive-messages.ts",
		"send-message": "cross-env NODE_PATH=. ts-node --project tsconfig.json ./scripts/send-message.ts",
		"db:seed": "cross-env NODE_PATH=. ts-node --project tsconfig.json ./scripts/seed.ts",
		"db:setup": "yarn db:schema-drop && yarn db:schema-sync",
		"db:schema-sync": "yarn build && yarn typeorm schema:sync -d build/modules/core/infra/database/db.config.js",
		"db:schema-drop": "yarn build && yarn typeorm schema:drop -d build/modules/core/infra/database/db.config.js",
		"db:schema-log": "yarn build && yarn typeorm schema:log -d build/modules/core/infra/database/db.config.js",
		"db:cache-clear": "yarn build && yarn typeorm cache:clear -d build/modules/core/infra/database/db.config.js",
		"db:migration-create": "yarn typeorm migration:create",
		"db:migration-show": "yarn build && yarn typeorm migration:show -d build/modules/core/infra/database/db.config.js",
		"db:migration-run": "yarn build && yarn typeorm migration:run -d build/modules/core/infra/database/db.config.js",
		"db:migration-revert": "yarn build && yarn typeorm migration:revert -d build/modules/core/infra/database/db.config.js",
		"db:migration-generate": "yarn build && yarn typeorm migration:generate -d build/modules/core/infra/database/db.config.js",
		"db:entity-create": "yarn typeorm entity:create",
		"db:subscriber-create": "yarn typeorm subscriber:create",
		"db:query-exec": "yarn build && yarn typeorm query -d build/modules/core/infra/database/db.config.js",
		"test": "yarn test:unit && yarn test:integration && yarn test:e2e",
		"test:coverage": "yarn test:unit --coverage && yarn test:integration --coverage && yarn test:e2e --coverage",
		"test:unit": "cross-env NODE_ENV=test jest -c jest.config.js",
		"test:unit:#it": "cross-env NODE_ENV=test jest -t=#it -c jest.config.js --verbose",
		"test:unit:watch": "cross-env NODE_ENV=test jest -c jest.config.js --watch --verbose --detectOpenHandles",
		"test:integration": "cross-env NODE_ENV=test jest -c jest.integration.config.js --runInBand",
		"test:integration:#it": "cross-env NODE_ENV=test jest -t=#it -c jest.integration.config.js --verbose --runInBand",
		"test:integration:watch": "cross-env NODE_ENV=test jest -c jest.integration.config.js --watch --verbose --detectOpenHandles",
		"test:e2e": "cross-env NODE_ENV=test jest -c jest.e2e.config.js --runInBand",
		"test:e2e:#it": "cross-env NODE_ENV=test jest -t=#it -c jest.e2e.config.js --verbose --runInBand",
		"test:e2e:watch": "cross-env NODE_ENV=test jest -c jest.e2e.config.js --watch --verbose --detectOpenHandles",
		"sonar:prepare": "yarn coverage:merge:prepare && yarn coverage:merge:unify && yarn coverage:merge:report",
		"sonar:scan": "yarn sonar-scanner",
		"coverage:merge:prepare": "cp coverage/unit/coverage-final.json coverage/unit.json && cp coverage/integration/coverage-final.json coverage/integration.json && cp coverage/e2e/coverage-final.json coverage/e2e.json",
		"coverage:merge:unify": "nyc merge coverage/ coverage/coverage-final.json",
		"coverage:merge:report": "nyc report -t coverage/ --report-dir coverage/ --reporter=html --reporter=cobertura",
		"lint": "yarn ts:lint && yarn js:lint",
		"lint:fix": "yarn ts:lint --quiet --fix && yarn js:lint --quiet --fix",
		"ts:lint": "eslint --ext .ts \"{src,tests,scripts}/**/*.ts\"",
		"js:lint": "eslint --ext .js \"./**/*.js\"",
		"typeorm:cli": "ts-node --project tsconfig.build.json ./node_modules/typeorm/cli -d ./src/modules/core/infra/database/db.config.ts",
		"commit": "git-cz",
		"versioning": "semantic-release",
		"postinstall": "husky install"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "husky add ./.husky/pre-commit",
			"pre-push": "husky add ./.husky/pre-push",
			"commit-msg": "husky add ./.husky/commit-msg"
		}
	},

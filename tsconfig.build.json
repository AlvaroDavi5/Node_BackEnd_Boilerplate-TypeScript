{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/**/*.jsx",
		"tests/**/*.d.ts",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"tests/**/*.js",
		"tests/**/*.jsx"
	],
	"exclude": [
		"node_modules",
		"build",
		"**/*.test.ts",
		"**/*.spec.ts"
	]
}
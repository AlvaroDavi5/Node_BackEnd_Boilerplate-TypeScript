{
	"name": "node_ddd_boilerplate_backend_typescript",
	"description": "Node.js boilerplate for Back-End using TypeScript.",
	"version": "0.0.1",
	"license": "MIT",
	"author": "Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>",
	"contributors": [
		"Álvaro Davi Santos Alves <alvaro.davisa@gmail.com>"
	],
	"main": "./src/index.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlvaroDavi5/Node_DDD_Boilerplate-BackEnd-TypeScript.git",
		"ssh": "git@github.com:AlvaroDavi5/Node_DDD_Boilerplate-BackEnd-TypeScript.git"
	},
	"private": false,
	"os": [
		"linux",
		"ubuntu",
		"win32"
	],
	"engines": {
		"node": "f>=18.00.x <18.6.0"
	},
	"keywords": [
		"boilerplate",
		"node",
		"typescript",
		"javascript"
	],
	"scripts": {
		"postinstall": "husky install",
		"security-check": "node ./scripts/security-check.js",
		"start": "cross-env NODE_PATH=. ts-node ./src/index.ts",
		"dev": "cross-env NODE_PATH=. NODE_ENV=dev nodemon --watch './src/' --exec 'ts-node ./src/index.ts' -e ts",
		"mock-dependencies": "ts-node ./scripts/mock-dependencies.ts",
		"receive-messages": "cross-env NODE_PATH=. ts-node scripts/receive-messages.ts",
		"send-message": "cross-env NODE_PATH=. ts-node ./scripts/send-message.ts",
		"db:setup": "yarn sequelize-cli db:drop && yarn sequelize-cli db:create",
		"migrate": "yarn sequelize-cli db:migrate",
		"migrate:undo": "yarn sequelize-cli db:migrate:undo:all",
		"migrate:create": "yarn sequelize-cli migration:create --name ",
		"seed": "yarn sequelize-cli db:seed:all",
		"seed:undo": "yarn sequelize-cli db:seed:undo:all",
		"seed:create": "yarn sequelize-cli seed:create --name ",
		"test": "yarn test:unit && yarn test:integration",
		"test:#it": "jest -t=#it --verbose",
		"test:unit": "jest -c jest.config.js",
		"test:unit:#it": "jest -t=#it -c jest.config.js --verbose",
		"test:integration": "jest -c jest.integration.config.js --setupFiles dotenv/config --runInBand",
		"test:integration:#it": "jest -t=#it -c jest.integration.config.js --verbose --setupFiles dotenv/config --runInBand",
		"test:integration:log": "cross-env SHOW_LOGS=true jest -c jest.integration.config.js --setupFiles dotenv/config --runInBand",
		"test:integration:log:#it": "cross-env SHOW_LOGS=true jest -t=#it -c jest.integration.config.js --setupFiles dotenv/config --runInBand",
		"test:coverage:unit": "jest -c jest.config.js --coverage --collectCoverage",
		"test:coverage:integration": "jest -c jest.integration.config.js --setupFiles dotenv/config --runInBand --coverage --collectCoverage",
		"test:watch": "jest --watch --verbose --detectOpenHandles",
		"sonar:scan": "yarn test:coverage:unit && yarn sonar-scanner",
		"lint": "yarn js:lint && yarn ts:lint",
		"lint:fix": "yarn js:lint --fix && yarn ts:lint --fix",
		"js:lint": "eslint --ext .js ./src/ --quiet",
		"ts:lint": "eslint --ext .ts ./dev/ ./configs/ ./scripts/ ./src/ ./tests/unit ./tests/integration --quiet",
		"format": "prettier --write \"./**/*.{js,ts,jsx,tsx,json}\"",
		"commit": "git-cz",
		"versioning": "semver"
	},
	"husky": {
		"hooks": {
			"pre-commit": "husky add ./.husky/pre-commit",
			"pre-push": "husky add ./.husky/pre-push",
			"commit-msg": "husky add ./.husky/commit-msg"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@aws-sdk/client-cognito-identity-provider": "^3.341.0",
		"@aws-sdk/client-s3": "^3.341.0",
		"@aws-sdk/client-sns": "^3.341.0",
		"@aws-sdk/client-sqs": "^3.341.0",
		"awilix": "^8.0.1",
		"awilix-express": "^8.0.0",
		"aws-sdk": "^2.1386.0",
		"axios": "^1.4.0",
		"axios-retry": "^3.5.0",
		"base-64": "^1.0.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"crypto-js": "^4.1.1",
		"dotenv": "^16.0.3",
		"ejs": "^3.1.9",
		"express": "^4.18.1",
		"express-async-handler": "^1.2.0",
		"fs": "^0.0.1-security",
		"http": "^0.0.1-security",
		"http-status": "^1.6.2",
		"ioredis": "^5.3.2",
		"joi": "^17.9.2",
		"jsonwebtoken": "^9.0.0",
		"morgan": "^1.10.0",
		"mysql2": "^3.3.3",
		"node-cron": "^3.0.2",
		"path": "^0.12.7",
		"pg": "^8.11.0",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.31.1",
		"socket.io": "^4.5.2",
		"socket.io-client": "^4.6.1",
		"sqs-consumer": "^7.1.0",
		"swagger-ui-express": "^4.6.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"uuid": "^9.0.0",
		"winston": "^3.9.0",
		"yamljs": "^0.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@types/compression": "^1.7.2",
		"@types/dotenv": "^8.2.0",
		"@types/ejs": "^3.1.2",
		"@types/express": "^4.17.17",
		"@types/ioredis-mock": "^8.2.2",
		"@types/jest": "^29.5.1",
		"@types/joi": "^17.2.3",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/morgan": "^1.9.4",
		"@types/node-cron": "^3.0.7",
		"@types/sequelize": "^4.28.15",
		"@types/socket.io": "^3.0.2",
		"@types/socket.io-client": "^3.0.0",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/uuid": "^9.0.1",
		"@types/yamljs": "^0.2.31",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/eslint-plugin-tslint": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@typescript-eslint/scope-manager": "^5.59.8",
		"@typescript-eslint/typescript-estree": "^5.59.8",
		"@typescript-eslint/utils": "^5.59.8",
		"babel-jest": "^29.5.0",
		"child_process": "^1.0.2",
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^16.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.1",
		"eslint-plugin-standard": "^5.0.0",

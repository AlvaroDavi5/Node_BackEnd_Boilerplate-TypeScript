		"nodemon": "^2.0.22",
		"prettier": "^2.8.8",
		"semantic-release": "^21.0.2",
		"sequelize-cli": "^6.6.0",
		"sonarqube-scanner": "^3.0.1",
		"superagent-defaults": "^0.1.14",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-node-dev": "^2.0.0",
		"tslint": "^6.1.3"
	}
}

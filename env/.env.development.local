# Notification Service (AWS SNS)
AWS_SNS_DEFAULT_TOPIC_NAME='DEFAULT_TOPIC'
AWS_SNS_DEFAULT_TOPIC_ARN='arn:aws:sns:us-east-1:000000000000:DEFAULT_TOPIC'

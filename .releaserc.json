{
	"$schema": "https://json.schemastore.org/semantic-release.json",
	"repositoryUrl": "https://github.com/AlvaroDavi5/Node_BackEnd_Boilerplate-TypeScript",
	"tagFormat": "v${version}",
	"ci": true,
	"dryRun": false,
	"branches": [
		"main",
		"release"
	],
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "conventionalcommits",
				"releaseRules": [
					{
						"scope": "no-release",
						"release": false
					},
					{
						"type": "build",
						"scope": "release",
						"release": "minor"
					},
					{
						"type": "refactor",
						"scope": "perf*",
						"release": "minor"
					},
					{
						"type": "chore",
						"scope": "build",
						"release": "minor"
					},
					{
						"type": "chore",
						"scope": "fix",
						"release": "patch"
					},
					{
						"type": "ci",
						"scope": "fix",
						"release": "patch"
					}
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "conventionalcommits"
			}
		],
		[
			"@semantic-release/git",
			{
				"message": "docs(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		[
			"@semantic-release/github",
			{
				"assets": [
					{
						"path": "build.zip",
						"name": "node_backend_boilerplate-v4.8.2.zip",
						"label": "Application WebPack"
					},
					{
						"path": "CHANGELOG.md",
						"name": "CHANGELOG-node_backend_boilerplate.md",
						"label": "Application CHANGELOG"
					}
				]
			}
		]
	]
}
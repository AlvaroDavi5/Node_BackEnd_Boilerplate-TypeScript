# Priority:
#   development:  .env.development.local >>> .env.development >>> .env.local >>> .env
#   production:   .env.production.local >>> .env.production >>> .env.local >>> .env
#   test:         .env.test.local >>> .env.test >>> .env.local >>> .env


# Common Envs
APP_NAME='Node Boilerplate'
NODE_ENV='development'
APP_PORT='3000'
APP_URL='http://localhost:3000/'
SOCKET_ENV='enabled'

# Project Configs
APP_LOGS_PATH='./logs/info.log'

# Criptography Configs
CRYPTO_ALGORITHM='md5'
CRYPTO_KEY='pass_phrase'

# Localstack Configs
LOCALSTACK_URL='http://localhost:4566'

# AWS Configs
AWS_ENDPOINT_URL='http://localhost:4566/' # localhost | localstack
AWS_REGION='us-east-1'
AWS_ACCESS_KEY_ID='mock'
AWS_SECRET_ACCESS_KEY='mock'
AWS_MESSAGE_DEDUPLICATION_ID='mock'
AWS_MESSAGE_GROUP_ID='Group1'
